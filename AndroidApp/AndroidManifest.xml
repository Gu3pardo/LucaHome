<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guepardoapps.lucahome"
    android:versionCode="100161102"
    android:versionName="1.0.0.161102" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="guepardoapps.lucahome.activities.BootActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="guepardoapps.lucahome.activities.FlatMapActivity" >
        </activity>
        <activity android:name="guepardoapps.lucahome.activities.ListActivity" >
        </activity>
        <activity android:name="guepardoapps.lucahome.activities.MainActivity" >
        </activity>
        <activity android:name="guepardoapps.lucahome.activities.SettingsActivity" >
        </activity>
        <activity android:name="guepardoapps.lucahome.activities.SoundActivity" >
        </activity>

        <receiver
            android:name="guepardoapps.common.receiver.sockets.SocketActionReceiver"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="guepardoapps.common.receiver.sockets.SocketReloadReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="guepardoapps.lucahome.broadcast.reload.wirelesssockets" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="guepardoapps.common.receiver.sound.StopSoundReceiver"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="guepardoapps.common.receiver.WIFIReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.net.wifi.supplicant.CONNECTION_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGE" />
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service
            android:name="guepardoapps.common.service.DownloadService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.common.service.NotificationService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.common.service.OpenWeatherService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.common.service.RESTService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.common.service.sockets.SocketActionService"
            android:enabled="true" />
    </application>

</manifest>