<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="guepardoapps.lucahome"
    android:versionCode="116161120"
    android:versionName="1.1.6.161120" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="25" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault"
        tools:ignore="MissingApplicationIcon" >
        <activity
            android:name="guepardoapps.lucahome.wearcontrol.views.MainView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="guepardoapps.lucahome.wearcontrol.views.BirthdayView" />
        <activity android:name="guepardoapps.lucahome.wearcontrol.views.ScheduleView" />
        <activity
            android:name="guepardoapps.lucahome.wearcontrol.views.SensorView"
            android:hardwareAccelerated="true" />
        <activity android:name="guepardoapps.lucahome.wearcontrol.views.SocketView" />

        <service
            android:name="guepardoapps.lucahome.wearcontrol.services.PhoneMessageService"
            android:enabled="true" />
        <service
            android:name="guepardoapps.lucahome.watchface.services.WatchFaceService"
            android:label="@string/my_analog_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@layout/watch_face" />
            <meta-data
                android:name="com.google.android.wearable.watchface.preview"
                android:resource="@drawable/screenshot" />
            <meta-data
                android:name="com.google.android.wearable.watchface.preview_circular"
                android:resource="@drawable/screenshot" />

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />

                <category android:name="com.google.android.wearable.watchface.category.WATCH_FACE" />
            </intent-filter>
        </service>
        <service android:name="guepardoapps.lucahome.watchface.services.WearMessageListenerService" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>